{
  "name": "react-native-maplibre-gl-js",
  "version": "0.0.0-development",
  "description": "MapLibre GL JS for React Native",
  "main": "./lib/module/index.js",
  "types": "./lib/typescript/src/index.d.ts",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "types": "./lib/typescript/src/index.d.ts",
      "default": "./lib/module/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "lib",
    "!**/.*",
    "!**/*tests*",
    "!**/*fixtures*",
    "!**/*mocks*"
  ],
  "scripts": {
    "build:webview": "node scripts/build.js",
    "example": "yarn workspace react-native-maplibre-gl-js-example",
    "clean": "del-cli lib",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "typecheck": "tsc",
    "release": "release-it --only-version",
    "test": "jest --passWithNoTests",
    "docs": "typedoc",
    "prepare": "bob build",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/emilienaufauvre/react-native-maplibre-gl-js.git"
  },
  "author": "Emilien Aufauvre <emilien.aufauvre@live.fr> (https://github.com/emilienaufauvre)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/emilienaufauvre/react-native-maplibre-gl-js/issues"
  },
  "homepage": "https://github.com/emilienaufauvre/react-native-maplibre-gl-js#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "workspaces": [
    "example"
  ],
  "packageManager": "yarn@4.11.0",
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/npm",
        {
          "npmPublish": true
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            { "path": "CHANGELOG.md", "label": "Changelog" },
            { "path": "*.tgz", "label": "NPM package (.tgz)" }
          ]
        }
      ]
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "create-react-native-library": {
    "languages": "js",
    "type": "library",
    "tools": [
      "eslint",
      "lefthook",
      "release-it",
      "jest"
    ],
    "version": "0.55.1"
  },
  "dependencies": {
    "jotai": "^2.15.2",
    "maplibre-gl": "^5.14.0",
    "react-native-logs": "^5.5.0",
    "react-native-webview": "^13.16.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/compat": "^1.3.2",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.35.0",
    "@react-native/babel-preset": "0.81.1",
    "@react-native/eslint-config": "^0.81.1",
    "@release-it/conventional-changelog": "^10.0.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/npm": "^13.1.3",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.1.12",
    "commitlint": "^19.8.1",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "del-cli": "^6.0.0",
    "esbuild": "^0.27.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsdoc": "^61.4.1",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "lefthook": "^2.0.11",
    "prettier": "^3.7.4",
    "react": "19.1.0",
    "react-native": "0.81.5",
    "react-native-builder-bob": "^0.40.16",
    "release-it": "^19.0.4",
    "semantic-release": "^25.0.2",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.15",
    "typedoc-plugin-markdown": "^4.9.0",
    "typedoc-plugin-rename-defaults": "^0.7.3",
    "typescript": "^5.9.3"
  }
}
